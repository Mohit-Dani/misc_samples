<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d\t[%t]\t%-5p\t%m%n" />
		</layout>
	</appender>

	<appender name="R" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="File" value="mds-update.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d\t[%t]\t%-5p\t%m%n" />
		</layout>
	</appender>

	<logger name="com.tomtom.places.unicorn" additivity="false">
		<level value="INFO" />
		<appender-ref ref="R" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.jboss.resteasy" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="R" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="R" />
		<appender-ref ref="console" />
	</logger>
	<logger name="com.tomtom.cpu.coredb" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="R" />
		<appender-ref ref="console" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="R" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
